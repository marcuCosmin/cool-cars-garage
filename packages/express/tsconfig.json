{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "es2022",
    "module": "es2022",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/globals/*": ["../shared/globals/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/middlewares/*": ["./src/middlewares/*"],
      "@/models": ["./src/models"],
      "@/firebase/*": ["./src/firebase/*"],
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
}
